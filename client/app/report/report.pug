.container
  .row
    .col-md-12
      .panel.panel-default
        .panel-body
          .row.vcenter
            .col-xs-12.col-sm-8
              label.radio-inline
                input(type='radio',
                  name='approve',
                  [checked]='!filter',
                  (click)='get()'
                )
                | Tümü
              label.radio-inline
                input(type='radio',
                name='approve',
                  [checked]='filter=="onay-bekleyenler"',
                  (click)='get("onay-bekleyenler")'
                )
                | Onay Bekleyenler
              label.radio-inline
                input(type='radio',
                  name='approve',
                  [checked]='filter=="onaylananlar"',
                  (click)='get("onaylananlar")'
                )
                | Onaylananlar
              label.radio-inline
                input(type='radio',
                  name='approve',
                  [checked]='filter=="onaylanmayanlar"',
                  (click)='get("onaylanmayanlar")'
                )
                | Onaylanmayanlar               
            .col-xs-12.col-sm-4
              a.btn.btn-default.pull-right(routerLink='/bildir') Bildir
  .row
    .col-md-12
      p.text-center
        span(*ngIf='count===-1') Kayıtlar listeleniyor...
        span(*ngIf='count===0') Kayıt bulunamadı!
        span(*ngIf='count>0') Toplam {{count}} bildirilmiş kullanıcı:
      br
  .row(infiniteScroll,
      [infiniteScrollDistance]='0.1',
      [infiniteScrollThrottle]='50',
      (scrolled)='onScroll()'
    )
    .col-md-3(*ngFor='let report of reports')
      .panel.panel-default
        .panel-body
          p.text-center
            img.profile-image.img-circle([src]='report.profile.profile_image_url_https', width='48', height='48')
          h4.text-center
            a([attr.href]='"https://www.twitter.com/" + report.username', target='_blank') {{report.username}}
          p.text-center
            a.trash(*ngIf='filter=="onay-bekleyenler"', (click)='delete(report)')
              span.fa.fa-trash.fa-2x